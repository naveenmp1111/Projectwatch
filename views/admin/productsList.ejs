<head>
    <meta charset="utf-8">
    <title>OZORA</title>
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta property="og:title" content="">
    <meta property="og:type" content="">
    <meta property="og:url" content="">
    <meta property="og:image" content="">
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="/assetsb/imgs/theme/favicon.svg">
    <!-- Template CSS -->
    <link href="/assetsb/css/main.css" rel="stylesheet" type="text/css" />
</head>

<body>
    <div class="screen-overlay"></div>
    <%- include('leftnav') %>
    <main class="main-wrap">
        <%- include('header') %>
        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Products List</h2>
                </div>
                
            </div>
            <div class="card mb-4">
               
                <div class="card-body">
                <div class="table-responsive">
                    <table class="table" id="example">
                        <thead>
                            <tr>
                                <!-- <th scope="col" class="col-check">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox">
                                    </div>
                                </th> -->
                                <th scope="col" class="col-name">Product</th>
                                <th scope="col" class="col-price">Price</th>
                                <th scope="col" class="col-status">Status</th>
                                <th scope="col" class="col-quantity">Quantity</th>
                                <th scope="col" class="col-action text-end">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for (let i = 0; i < products.length; i++) { %>
                                <tr>
                                    <!-- <td>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox">
                                        </div>
                                    </td> -->
                                    <td>
                                        <a class="itemside" href="#">
                                            <div class="left">
                                                <img src="/<%= products[i].image[0] %>" class="img-sm img-thumbnail" alt="Item">
                                            </div>
                                            <div class="info">
                                                <h6 class="mb-0"><%= products[i].title %></h6>
                                            </div>
                                        </a>
                                    </td>
                                    <td><span><%= products[i].salePrice %></span></td>
                                    <td>
                                        <% if (products[i].is_active) { %>
                                            <span class="badge rounded-pill alert-success">Active</span>
                                        <% } else { %>
                                            <span class="badge rounded-pill alert-danger">Blocked</span>
                                        <% } %>
                                    </td>
                                    <td><span><%= products[i].quantity %></span></td>
                                    <td class="text-end">
                                        <a href="/admin/editProductList?id=<%= products[i]._id %>" class="btn btn-sm font-sm rounded btn-brand">
                                            <i class="material-icons md-edit"></i> Edit
                                        </a>
                                        <% if (products[i].is_active) { %>
                                            <a onclick="sweet('<%= products[i]._id %>')" class="btn btn-sm font-sm btn-light rounded text-danger">
                                                <i class="material-icons "></i> Block
                                            </a>
                                        <% } else { %>
                                            <a onclick="sweetAlert('<%= products[i]._id %>')" class="btn btn-sm font-sm btn-light rounded text-success">
                                                <i class="material-icons "></i> Unblock
                                            </a>
                                        <% } %>
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
                    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
                    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
                    <script>
                        $(document).ready(function () {
                            new DataTable('#example');
                    
                    })
                    </script>

                </div>
                </div>
                 <!-- card-body end// -->
            </div> <!-- card end// -->
            
        </section> <!-- content-main end// -->
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>
            function sweet(productId) {
                Swal.fire({
                    title: "Are you sure?",
                    text: "You want to block Product!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Yes, Block Product!"
                }).then((result) => {
                    if (result.isConfirmed) {
                        Swal.fire({
                            title: "Blocked!",
                            text: "Product has been blocked.",
                            icon: "success"
                        }).then((res) => {
                            if (res.isConfirmed) {
                                // Redirect after the second confirmation
                                window.location.href = `blockProductList?productId=${productId}&act=0`;
                            }
                        });
                    }
                });
            }
        </script>
         <script>

            function sweetAlert(productId) {
                
                Swal.fire({
                    title: "Are you sure?",
                    text: "You want to Unblock Product!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Yes, UnBlock Product!"
                }).then((result) => {
                    if (result.isConfirmed) {
                        Swal.fire({
                            title: "UnBlocked!",
                            text: "Product has been Unblocked.",
                            icon: "success"
                        }).then((res) => {
                            if (res.isConfirmed) {
                                // Redirect after the second confirmation
                                window.location.href = `unBlockProductList?productId=${productId}&act=1`;
                            }
                        });
                    }
                });
            }
        </script>
       
        
        

       <%- include('footer') %>
    </main>
    <script src="/assetsb/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="/assetsb/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="/assetsb/js/vendors/select2.min.js"></script>
    <script src="/assetsb/js/vendors/perfect-scrollbar.js"></script>
    <script src="/assetsb/js/vendors/jquery.fullscreen.min.js"></script>
    <!-- Main Script -->
    <script src="/assetsb/js/main.js" type="text/javascript"></script>
</body>


