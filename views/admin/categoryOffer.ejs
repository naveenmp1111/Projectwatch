<head>
    <meta charset="utf-8">
    <title>Evara Dashboard</title>
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta property="og:title" content="">
    <meta property="og:type" content="">
    <meta property="og:url" content="">
    <meta property="og:image" content="">
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="/assetsb/imgs/theme/favicon.svg">
    <!-- Template CSS -->
    <link href="/assetsb/css/main.css" rel="stylesheet" type="text/css" />
</head>

<body>
    <div class="screen-overlay"></div>
    <%- include('leftnav') %>
    <main class="main-wrap">
        <%- include('header') %>
        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Category Offer </h2>
                    <p>Add or delete a category offer</p>
                </div>
              
            </div>
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        
                        <div class="col-md-12">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th class="text-center">
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox" value="" />
                                                </div>
                                            </th>
                                           
                                            <th>Name</th>
                                            <th>Discount</th>
                                            <th>Expiry</th>
                                            <th>Offer Status</th>
                                            <th class="text-end">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <%for(i=0;i<category.length;i++){%>
                                        <tr>
                                            <td class="text-center">
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox" value="" />
                                                </div>
                                            </td>
                                            <td><b><%=category[i].categoryName%></b></td>
                                            
                                            <%if(category[i].discount){%>
                                                <td><%=category[i].discount%>%</td>
                                                <%}else{%>
                                                    <td></td>
                                                    <%}%>
                                            <td><%=category[i].expiry%></td>

                                            <%if(category[i].offerStatus == true){%>
                                                <td class="text-success"><%=category[i].offerStatus%></td>
                                                <%}else{%>
                                                    <td class="text-danger"><%=category[i].offerStatus%></td>
                                                    <%}%>
                                           
                                            <td class="text-end">
                                                <div class="dropdown">
                                                    <a href="#" data-bs-toggle="dropdown" class="btn btn-light rounded btn-sm font-sm"> <i class="material-icons md-more_horiz"></i> </a>
                                                    <div class="dropdown-menu">
                                                        
                                                        <%if(category[i].discount > 0){%>
                                                        <!-- <a class="dropdown-item" href="#">Edit </a> -->
                                                        <a class="dropdown-item text-danger" href="/admin/deleteCategoryOffer?categoryId=<%=category[i]._id%>&discount=<%=category[i].discount%>&">Delete</a>
                                                        <%}else{%>
                                                            <a class="dropdown-item" href="/admin/addCategoryOffer?categoryId=<%=category[i]._id%>">Add Offer</a>
                                                            <%}%>
                                                    </div>
                                                </div> <!-- dropdown //end -->
                                            </td>
                                        </tr>
                                        <%}%>
                                        
                                    </tbody>
                                </table>
                            </div>
                        </div> <!-- .col// -->
                    </div> <!-- .row // -->
                </div> <!-- card body .// -->
            </div> <!-- card .// -->
        </section> <!-- content-main end// -->
        <%- include('footer') %>
    </main>
    <script src="/assetsb/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="/assetsb/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="/assetsb/js/vendors/select2.min.js"></script>
    <script src="/assetsb/js/vendors/perfect-scrollbar.js"></script>
    <script src="/assetsb/js/vendors/jquery.fullscreen.min.js"></script>
    <!-- Main Script -->
    <script src="/assetsb/js/main.js" type="text/javascript"></script>
</body>


