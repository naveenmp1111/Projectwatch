<body>
    <div class="screen-overlay"></div>
    <%- include('leftnav') %>
    <main class="main-wrap">
        <%- include('header') %>
        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Brands </h2>
                    <p>Add, edit or delete a brands</p>
                </div>
                <div>
                    <input type="text" placeholder="Search Categories" class="form-control bg-white">
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <form action="/admin/editBrand?id=<%= brand._id %>" method="post" enctype="multipart/form-data" onsubmit="return validateForm()">
                                <div class="mb-4">
                                    <label for="product_name" class="form-label">Name</label>
                                    <input type="text" placeholder="Type here" class="form-control" id="product_name" name="brandName" value="<%= brand.brandName %>" />
                                </div>
                                <div class="mb-4">
                                    <input class="form-control" id="brandImage" type="file" name="image" accept="image/*" multiple onchange="checkFileCount()">
                                </div>
                                <div class="d-grid">
                                    <input type="submit" class="btn btn-primary" value="Update Brand">
                                </div>
                            </form>
                            <script>
                                function checkFileCount() {
                                  var fileInput = document.getElementById('brandImage');
                                  var maxFiles = 1; // Set the maximum number of allowed files
                            
                                  if (fileInput.files.length > maxFiles) {
                                    alert('You can only select up to ' + maxFiles + ' files.');
                                    // Clear the selected files to enforce the limit
                                    fileInput.value = '';
                                  }
                                }
                              </script>
                            <script>
                                function validateForm() {
                                    // Get the input element for brand name
                                    var brandNameInput = document.getElementById('product_name');
                            
                                    // Remove leading and trailing spaces
                                    var trimmedBrandName = brandNameInput.value.trim();
                            
                                    // Check if the trimmed value is empty
                                    if (trimmedBrandName === '') {
                                        // Show an error message or handle the validation as needed
                                        alert('Brand name cannot be empty.');
                                        return false; // Prevent form submission
                                    }
                            
                                    // Continue with form submission
                                    return true;
                                }
                            </script>
                            
                        </div>
                        <!-- .col// -->
                    </div> <!-- .row // -->
                </div> <!-- card body .// -->
            </div> <!-- card .// -->
        </section> <!-- content-main end// -->
        <%- include('footer') %>
    </main>
    <script src="/assetsb/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="/assetsb/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="/assetsb/js/vendors/select2.min.js"></script>
