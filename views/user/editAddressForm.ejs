                                // Validate first name
                                if (fname === '') {
                                    showError('fnameError', 'Please enter your first name.');
                                }
                    
                                // Validate last name
                                if (lname === '') {
                                    showError('lnameError', 'Please enter your last name.');
                                }
                    
                                // Validate country
                                if (country === '') {
