<header class="header-area header-style-1 header-height-2">
    <div class="header-top header-top-ptb-1 d-none d-lg-block">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-xl-3 col-lg-4">
                    <div class="header-info">
                        <ul>
                            <li><i class="fi-rs-smartphone"></i> <a href="#">(+91) 8594035813</a></li>
                           
                        </ul>
                    </div>
                </div>
                <div class="col-xl-6 col-lg-4">
                    <div class="text-center">
                        <div id="news-flash" class="d-inline-block">
                           
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-lg-4">
                    <div class="header-info header-info-right">
                        <ul>
                           
                            <%if(user){%>
                                <li><i class="fi-rs-user"></i><a href="/userAccount"></i><%=user.name%></a></li>
                            
                            <%}else{%>
                                <li><i class="fi-rs-user"></i><a href="/login">Log In / Sign Up</a></li>
                            <%}%>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="header-middle header-middle-ptb-1 d-none d-lg-block">
        <div class="container">
            <div class="header-wrap">
                <div class="logo logo-width-1">
                    <a href="/"><img src="assets/imgs/theme/logo.svg" alt="logo"></a>
                </div>
                <div class="header-right">
                    <div class="search-style-2">
                        <form action="/shop">
                           
                            <%if(locals.search){%>
                            <input type="text" placeholder="Search for items..." id="searchInput" name="search" value="<%=search%>" >
                            <%}else{%>
                            <input type="text" placeholder="Search for items..." id="searchInput" name="search"  >
                            <%}%>
                        </form>
                    </div>
                     
                    <div class="header-action-right">
                        <div class="header-action-2">
                            <div class="header-action-icon-2">
                                <%if(user){%>
                                <a href="/wishlist">
                                    <img class="svgInject" alt="Evara" src="assets/imgs/theme/icons/icon-heart.svg">
                                   
                                </a>
                                <%}else{%>
                                    <a href="/login">
                                        <img class="svgInject" alt="Evara" src="assets/imgs/theme/icons/icon-heart.svg">
                                        
                                    </a>
                                    <%}%>
                            </div>
                            <div class="header-action-icon-2">
                                <%if(user){%>
                                <a class="mini-cart-icon" href="/cart">
                                    <img alt="Evara" src="assets/imgs/theme/icons/icon-cart.svg">
                                    <%if(user.cart.length>0){%>
                                    <span class="pro-count blue"><%=user.cart.length%></span>
                                    <%}%>
                                </a>
                                <%}else{%>
                                    <a class="mini-cart-icon" href="/login">
                                        <img alt="Evara" src="assets/imgs/theme/icons/icon-cart.svg">
                                        
                                    </a>
                                    <%}%>
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="header-bottom header-bottom-bg-color sticky-bar">
        <div class="container">
            <div class="header-wrap header-space-between position-relative">
                <div class="logo logo-width-1 d-block d-lg-none">
                    <a href=""><img src="assets/imgs/theme/logo.svg" alt="logo"></a>
                </div>
                <div class="header-nav d-none d-lg-flex">
                    <div class="main-categori-wrap d-none d-lg-block">
                        <a class="categori-button-active" href="#">
                            <span class="fi-rs-apps"></span> Browse Categories
                        </a>
                        <div class="categori-dropdown-wrap categori-dropdown-active-large">
                            <ul>
                                <%for(i=0;i<categories.length;i++){%>
                                 <li><a href="/shop?categoryId=<%=categories[i]._id%>&message=withCategory"><%=categories[i].categoryName%></a></li>
                                 <%}%>
                                 
                                
                             </ul>
                           
                        </div>
                    </div>
                    <div class="main-menu main-menu-padding-1 main-menu-lh-2 d-none d-lg-block">
                        <nav>
                            <ul>
                                <li><a  href="/">Home </a>
                                   
                                </li>
                               
                                <li><a href="/shop" class="active">Shop </a>
                                   
                                </li>
                                <li><a href="">Brands <i class="fi-rs-angle-down"></i></a>
                                    <ul class="sub-menu">
                                        <% if (locals.brands) { %>
                                            <% for (let i = 0; i < brands.length; i++) { %>
                                                <li>
                                                    <a href="/shop?brandId=<%= brands[i]._id %>&message=withBrand<% if (locals.categoryId) { %>&categoryId=<%= categoryId %><% } else if (locals.gender) { %>&gender=<%= gender %><% } %>">
                                                        <%= brands[i].brandName %>
                                                    </a>
                                                </li>
                                            <% } %>
                                        <% } %>
                                    </ul>
                                    
                                </li>
                              
                                 <li>
                                    <a href="/about">About</a>
                                </li>
                                <li><a href="/contact">Contact </a>
                                   
                                </li>
                                <li><a href="/userAccount">Account </a>
                                   
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
                <div class="hotline d-none d-lg-block">
                    <p><i class="fi-rs-headset"></i><span>Hotline</span>8594035813 </p>
                </div>
                
                <div class="header-action-right d-block d-lg-none">
                    <div class="header-action-2">
                        <div class="header-action-icon-2">
                            <%if(user){%>
                            <a href="/wishlist">
                                <img alt="Evara" src="assets/imgs/theme/icons/icon-heart.svg">
                                
                            </a>
                            <%}else{%>
                                <a href="/login">
                                    <img alt="Evara" src="assets/imgs/theme/icons/icon-heart.svg">
                                    
                                </a>
                                <%}%>
                        </div>
                        <div class="header-action-icon-2">
                            <%if(user){%>
                            <a class="mini-cart-icon" href="/cart">
                                <img alt="Evara" src="assets/imgs/theme/icons/icon-cart.svg">
                                <%if(user.cart.length>0){%>
                                    <span class="pro-count blue"><%=user.cart.length%></span>
                                    <%}%>
                            </a>
                            <%}else{%>
                                <a class="mini-cart-icon" href="/login">
                                    <img alt="Evara" src="assets/imgs/theme/icons/icon-cart.svg">
                                    
                                </a>
                                <%}%>
                            
                        </div>
                        <div class="header-action-icon-2 d-block d-lg-none">
                            <div class="burger-icon burger-icon-white">
                                <span class="burger-icon-top"></span>
                                <span class="burger-icon-mid"></span>
                                <span class="burger-icon-bottom"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="mobile-header-active mobile-header-wrapper-style">
